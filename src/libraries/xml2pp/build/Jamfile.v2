project libraries/xml2pp
    : source-location ../source
    : build-dir $(BUILD_TOP)
    : requirements <include>../include
    ;

lib xml2pp 
    : text_reader.cpp
      xml2pp_exception.cpp
      /site-config//boost_filesystem
    : <toolset>darwin,<link>shared:<linkflags>"-undefined dynamic_lookup"
      <xml2>yes:<use>/site-config//xml2
      <xml2>no:<build>no
    :
    : <xml2>no:<build>no
      <xml2>yes:<library>/site-config//xml2
    ;

