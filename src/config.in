#Redefine default definitions using autoconf
HOST_OS            = @HOST_OS@
CC                 = @CC@
CFLAGS             = @CFLAGS@
CPP                = @CPP@
CPPFLAGS           = @CPPFLAGS@
CXX                = @CXX@
CXXFLAGS           = @CXXFLAGS@

ifeq ($(HOST_OS),WINDOWS)
 # Windows does not have a libdl equivalent
 CPPFLAGS            += -DNO_DYNLOAD
else
 ifeq ($(HOST_OS),MINGW)
  CPPFLAGS           += -DNO_DYNLOAD
 else
  LIBDL               = -ldl
 endif
endif

LDFLAGS            = -Wl,-rpath,$(libdir) -rdynamic @LDFLAGS@

ifeq ($(HOST_OS),MACOSX)
 LDFLAGS           = @LDFLAGS@
endif
ifeq ($(HOST_OS),MINGW)
 LDFLAGS           = -Wl,-rpath,$(libdir) @LDFLAGS@
endif

ARFLAGS            = crs
INSTALL            = install
LEX                = @LEX@
LFLAGS             = -I -Pgsyy
BISON              = @BISON@
BFLAGS             = -d -pgsyy
ATERM              = @ATERM_NAME@ 
BUILD_ATERM        = @BUILD_ATERM@
USE_LIBXML2        = @USE_LIBXML2@
LIBXML2_CPPFLAGS   = @LIBXML2_CPPFLAGS@
USE_XMLTO          = @USE_XMLTO@
XMLTO              = @XMLTO@
USE_WX             = @USE_WX@
WX_LIBS            = @WX_LIBS@
WX_CPPFLAGS        = @WX_CPPFLAGS@
USE_BOOST          = @USE_BOOST@
BOOST_PREFIX      = @BOOST_PREFIX@

# Installation directories
prefix             = @prefix@
exec_prefix        = @exec_prefix@
bindir             = @bindir@
libdir             = @libdir@
datadir            = @datadir@
includedir         = @includedir@
infodir            = @infodir@
mandir             = @mandir@

# Environment variable for Mac
ifeq ($(HOST_OS),MACOSX)
 MACOSX_DEPLOYMENT_TARGET = 10.3
 export MACOSX_DEPLOYMENT_TARGET
endif

