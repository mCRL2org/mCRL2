#Redefine default definitions using autoconf
HOST_OS            = @HOST_OS@
CC                 = @CC@
CFLAGS             = @CFLAGS@
CPP                = @CPP@
CPPFLAGS           = @CPPFLAGS@
CXX                = @CXX@
CXXFLAGS           = @CXXFLAGS@
LDFLAGS            = -Wl,-rpath,$(libdir) -rdynamic @LDFLAGS@

LIBDL              = -ldl

ifeq ($(HOST_OS),WINDOWS)
 # Windows does not have a libdl equivalent
 CPPFLAGS         += -DNO_DYNLOAD
 LIBDL             =
endif
ifeq ($(HOST_OS),MINGW)
 CPPFLAGS         += -DNO_DYNLOAD
 LIBDL             =
 LDFLAGS           = -Wl,-rpath,$(libdir) @LDFLAGS@
endif
ifeq ($(HOST_OS),CYGWIN)
 CPPFLAGS         += -DNO_DYNLOAD
 LIBDL             =
 LDFLAGS           = -Wl,-rpath,$(libdir) @LDFLAGS@
endif
ifeq ($(HOST_OS),MACOSX)
 LDFLAGS           = @LDFLAGS@

 # Environment variable for Mac
 MACOSX_DEPLOYMENT_TARGET = 10.3
 export MACOSX_DEPLOYMENT_TARGET
endif

ifeq (@BUILD_EXPERIMENTALS@,1)
 EXE_NAMES = $(EXPERIMENTALS)
endif

ARFLAGS            = crs
INSTALL            = install
STRIP              = strip
RM                 = rm -fr
LEX                = @LEX@
GZIP               = gzip -f
LFLAGS             = -I -Pmcrl2yy
BISON              = @BISON@
BFLAGS             = @BFLAGS@ -d -pmcrl2yy
ATERM              = @ATERM_NAME@ 
BUILD_ATERM        = @BUILD_ATERM@
USE_LIBXML2        = @USE_LIBXML2@
LIBXML2_CPPFLAGS   = @LIBXML2_CPPFLAGS@
LIBXML2_LDFLAGS    = @LIBXML2_LDFLAGS@
USE_XMLTO          = @USE_XMLTO@
XMLTO              = @XMLTO@
USE_WX             = @USE_WX@
WX_CONFIG          = @WX_CONFIG@
WX_LIBS            = @WX_LIBS@
WX_CPPFLAGS        = @WX_CPPFLAGS@
USE_BOOST          = @USE_BOOST@
BOOST_PREFIX       = @BOOST_PREFIX@

# Installation directories
prefix             = @prefix@
exec_prefix        = @exec_prefix@
bindir             = @bindir@
libdir             = @libdir@
datadir            = @datadir@
includedir         = @includedir@
infodir            = @infodir@
mandir             = @mandir@

BOOST_FILESYSTEM      = -lboost_filesystem
BOOST_PROGRAM_OPTIONS = -lboost_program_options

ifeq ($(BOOST_PREFIX),boost)
 BUILD_BOOST       = 1

 ifeq ($(HOST_OS),LINUX)
  BOOST_LDFLAGS = -Wl,-rpath=$(libdir)
 endif

 BOOST_PREFIX     := @abs_top_srcdir@/$(BOOST_PREFIX)

 ifeq ($(HOST_OS),MINGW)
  BOOST_FILESYSTEM      = $(BOOST_PREFIX)/lib/libboost_filesystem-s.lib
  BOOST_PROGRAM_OPTIONS = $(BOOST_PREFIX)/lib/libboost_program_options-s.lib
 endif
 ifeq ($(HOST_OS),CYGWIN)
  BOOST_FILESYSTEM      = $(BOOST_PREFIX)/lib/libboost_filesystem-s.lib
  BOOST_PROGRAM_OPTIONS = $(BOOST_PREFIX)/lib/libboost_program_options-s.lib
 endif
endif

BOOST_LDFLAGS        += -L$(BOOST_PREFIX)/lib

# Add revision number
ifeq ($(findstring $(MAKECMDGOALS),clean distclean),)
%.o: revision
endif

