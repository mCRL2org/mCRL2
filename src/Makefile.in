#Redefine default definitions using autoconf
CC              = @CC@
CFLAGS          = @CFLAGS@
CPP             = @CPP@
CPPFLAGS        = @CPPFLAGS@
LDFLAGS         = @LDFLAGS@
ARFLAGS         = crs
INSTALL         = install
LEX             = @LEX@
LFLAGS          = -I -Pgsyy
BISON           = @BISON@
BFLAGS          = -d -pgsyy

#installation directories
prefix          = @prefix@
exec_prefix     = @exec_prefix@
bindir          = @bindir@
libdir          = @libdir@
datadir         = @datadir@
includedir      = @includedir@
infodir         = @infodir@
mandir          = @mandir@

#Library definitions
LIB_NAME        = libgsparse.a
LIB_OBJECTS     = libgsparse.o gsparser.o gslexer.o gstypecheck.o gsdataimpl.o gsfunc.o
LIB_LDFLAGS     = -lATerm

#Parser definitions
PARSER_NAME     = gsparse
PARSER_OBJECTS  = gsparse.o
PARSER_LDFLAGS  = -lgsparse -lATerm

#lineariser definitions
LINEARISER_NAME     = linearise
LINEARISER_OBJECTS  = linearise.o
LINEARISER_LDFLAGS  = -lgsparse -lATerm


#Make rules
.PHONY: all install clean
.PRECIOUS: gsparser.c gslexer.c

all : $(LIB_NAME) $(PARSER_NAME) $(LINEARISER_NAME) Makefile

install : all
	$(INSTALL) $(PARSER_NAME) $(bindir)

$(LIB_NAME) : $(LIB_OBJECTS) Makefile
	$(AR) $(ARFLAGS) $@ $(LIB_OBJECTS)

$(PARSER_NAME) : $(PARSER_OBJECTS) $(LIB_NAME) Makefile
	$(CC) -o $@ $(PARSER_OBJECTS) $(LDFLAGS) $(PARSER_LDFLAGS)

$(LINEARISER_NAME) : $(LINEARISER_OBJECTS) $(LIB_NAME) Makefile
	$(CC) -o $@ $(LINEARISER_OBJECTS) $(LDFLAGS) $(LINEARISER_LDFLAGS)
                                                                                          


gslexer.o      : gslexer.h gsparser.h gsfunc.h
gsparser.o     : gsfunc.h
gsfunc.o       : gsfunc.h
gstypecheck.o  : gstypecheck.h gsfunc.h
gsdataimpl.o   : gsdataimpl.h gsfunc.h
libgsparse.o   : libgsparse.h gslexer.h gstypecheck.h gsdataimpl.h gsfunc.h 
gsparse.o      : gsparse.h libgsparse.h gsfunc.h

%.c : %.y
	$(BISON) $(BFLAGS) -o $@ $<

%.c : %.l
	$(LEX) $(LFLAGS) -o$@ $<

clean :
	$(RM) $(LIB_NAME) $(PARSER_NAME) *.o gslexer.c gsparser.c gsparser.h\
gsparser.output config.status config.log *~ core core.*

